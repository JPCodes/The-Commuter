<%= render 'page-title' %>

<% if current_user && current_user.id == @conversation.user.id %>
  <%= link_to 'Delete This Conversation', conversation_path, method: :delete, :data => {confirm: 'Are You Sure?'} %>
  <%= link_to 'Edit This Conversation', edit_conversation_path(@conversation) %>
<% end %>

