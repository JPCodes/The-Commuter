                    <img src="http://api.adorable.io/avatar/200/<%= @conversation.user.id %>" class="img-circle avatar" alt="user profile image">
                </div>
                <div class="pull-left meta">
                    <div class="title h5">
                        <a href="#"><b><%= @conversation.user.name %></b></a>
                        made a post: <%= @conversation.title %>
                    </div>
                    <h6 class="text-muted time"><%= distance_of_time_in_words(@conversation.created_at, Time.now) %> ago</h6>
                </div>
            </div>
            <div class="post-description">
